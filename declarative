pipeline {
    agent any
    
    stages {
        stage('clone') {
            steps {
                git branch: 'main', url: 'https://github.com/nodejs/examples.git'
            }
        }
     
        stage('Artifactoryconfiguration') {
            steps {
                rtServer (
                    id: "JFROG_ID2",
                    url: "https://nodejs1.jfrog.io/",
                    credentialsId: "nodejs"
                )
                
                rtNpmResolver (
                    id: "NPM_RESOLVER",
                    serverId: "JFROG_ID2",
                    repo: "nodejs-npm-remote"
                )
        
                rtNpmDeployer (
                    id: "NPM_DEPLOYER",
                    serverId: "JFROG_ID2",
                    repo: 'nodejs-npm-local'
                )
            }
        }
        
        stage ('Exec npm install') {
            steps {
                rtNpmInstall (
                    sh 'npm install'
                    sh 'npm start'
                )                  
             }
         }
        
        stage('Publish build info') {
            steps {
                rtPublishBuildInfo (
                    serverId: "JFROG_ID2"
                )
            }
        }
    }
}
