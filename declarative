pipeline {
    agent {label 'JDK-8'}
    stages {
        stage('clone') {
            steps{
                git branch: 'main', url: 'https://github.com/nodejs/examples.git'
            }
        }
     
        stage('Artifactoryconfiguration') {
            steps{
                rtServer (
                    id: "JFROG_ID2",
                    url: "https://nodejs1.jfrog.io/",
                    credentialsId: "nodejs"
                )
        
                rtNpmDeployer (
                    id: "NPM_DEPLOYER",
                    serverId: "JFROG_ID2",
                    remoteRepo: "nodejs-npm-remote"
                )   localRepo: "nodejs-npm-local"
           }
        }
        
       stage ('Exec npm') {
            steps {
                rtNpmInstall (
                    tool: NPM_TOOL, // Tool name from Jenkins configuration
                    pom: 'pom.xml',
                    goals: 'clean install',
                    resolverId: "NPM_DEPLOYER"
                )
            }
        }
        stage('Publish build info') {
            steps {
                rtPublishBuildInfo (
                    serverId: "JFROG_ID2"
                )
            }
        }
    }
}
