pipeline {
    agent any
    
    stages {
        stage('clone') {
            steps {
                git branch: 'master', url: 'https://github.com/heroku/node-js-sample.git'
            }
        }
     
        stage('Artifactoryconfiguration') {
            steps {
                rtServer (
                    id: "JFROG_ID2",
                    url: "https://nodejs1.jfrog.io/",
                    credentialsId: "nodejs"
                )
                
                rtNpmResolver (
                    id: "NPM_RESOLVER",
                    serverId: "JFROG_ID2",
                    repo: "nodejs-npm-remote"
                )
        
                rtNpmDeployer (
                    id: "NPM_DEPLOYER",
                    serverId: "JFROG_ID2",
                    repo: 'nodejs-npm-local'
                )
            }
        }
        
        stage ('npm build') {
            steps {
                npm install
            }
        }
        
        stage('Publish build info') {
            steps {
                rtPublishBuildInfo (
                    serverId: "JFROG_ID2"
                )
            }
        }
    }
}
