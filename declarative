pipeline {
    agent {label 'JDK-8'}
    stages {
        stage('clone') {
            steps{
                git branch: 'main', url: 'https://github.com/nodejs/examples.git'
            }
        }
     
        stage('Artifactoryconfiguration') {
            steps{
                rtServer (
                    id: "JFROG_ID2",
                    url: "https://nodejs1.jfrog.io",
                    credentialsId: "nodejs"
                )
            
                rtNpmResolver (
                    id: "NPM_RESOLVER",
                    url: "https://nodejs1.jfrog.io",
                    repo: "nodejs-npm-remote"
                )
        
                rtNpmDeployer (
                    id: "NPM_DEPLOYER",
                    url: "https://nodejs1.jfrog.io",
                    repo: "nodejs-npm-local"
                )
           }
        }
        
         stage ('Exec npm install') {
            steps {
                rtNpmInstall (
                    tool: NPM_TOOL, // Tool name from Jenkins configuration
                    path: "/usr/bin/npm",
                    resolverId: "NPM_RESOLVER"
                )
            }
        }

        stage ('Exec npm publish') {
            steps {
                rtNpmPublish (
                    tool: NPM_TOOL, // Tool name from Jenkins configuration
                    path: "/usr/bin/npm",
                    deployerId: "NPM_DEPLOYER"
                )
            }
        }
        stage('Publish build info') {
            steps {
                rtPublishBuildInfo (
                    serverId: "https://nodejs1.jfrog.io"
                )
            }
        }
    }
}
